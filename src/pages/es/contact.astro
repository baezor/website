---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE, SITE_URL } from "@/const";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const success = Astro.url.searchParams.get('success') === 'true';
const redirectUrl = lang === 'es'
  ? `${SITE_URL}/es/contact?success=true`
  : `${SITE_URL}/contact?success=true`;
---

<Layout
  title={`${t('contact.title')} | ${SITE_TITLE[lang]}`}
  description={t('contact.intro')}
>
  <main>
    <div class="contact-container">
      <h1>{t('contact.title')}</h1>
      <p class="contact-intro">
        {t('contact.intro')}
      </p>

      {success && (
        <div class="success-message" role="alert">
          <p>{t('contact.form.success')}</p>
        </div>
      )}

      <form action="https://formspree.io/f/xkogdgow" method="POST" class="contact-form">
        <input type="hidden" name="_next" value={redirectUrl} />
        <input type="text" name="_gotcha" class="honeypot" tabindex="-1" autocomplete="off" />

        <div class="form-group">
          <label for="name">{t('contact.form.name')}</label>
          <input type="text" id="name" name="name" autocomplete="name" aria-required="true" required />
        </div>

        <div class="form-group">
          <label for="email">{t('contact.form.email')}</label>
          <input type="email" id="email" name="email" autocomplete="email" aria-required="true" required />
        </div>

        <div class="form-group">
          <label for="subject">{t('contact.form.subject')}</label>
          <input type="text" id="subject" name="subject" aria-required="true" required />
        </div>

        <div class="form-group">
          <label for="message">{t('contact.form.message')}</label>
          <textarea id="message" name="message" rows="5" aria-required="true" required></textarea>
        </div>

        <button type="submit" class="submit-btn">{t('contact.form.submit')}</button>
      </form>

      <div class="contact-note">
        <p>{t('contact.lookingForward')}</p>
      </div>
    </div>
  </main>
</Layout>

<style>
  .contact-container {
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1rem;
  }

  .honeypot {
    position: absolute;
    left: -9999px;
    opacity: 0;
    pointer-events: none;
  }

  .success-message {
    max-width: 600px;
    margin: 0 auto 2rem;
    padding: 1rem 1.5rem;
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    border-radius: 0.5rem;
    color: #155724;
    text-align: center;
  }

  :global(.dark) .success-message {
    background-color: #1e3a1e;
    border-color: #2d5a2d;
    color: #98d19a;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .contact-intro {
    font-size: 1.2rem;
    line-height: 1.6;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .contact-form {
    max-width: 600px;
    margin: 0 auto;
    background-color: var(--color-bg-elevated);
    padding: 2rem;
    border-radius: 0.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid var(--color-text-muted);
    border-radius: 0.5rem;
    font-size: 1rem;
    font-family: var(--font-body);
    background-color: var(--color-bg);
    color: var(--color-text);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    box-sizing: border-box;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(204, 120, 92, 0.2);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-btn {
    width: 100%;
    padding: 0.875rem 1.5rem;
    background-color: var(--color-accent);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    font-family: var(--font-body);
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.2s ease;
  }

  .submit-btn:hover {
    background-color: var(--color-accent-hover);
    transform: translateY(-2px);
  }

  .submit-btn:active {
    background-color: var(--color-accent-active);
    transform: translateY(0);
  }

  .contact-note {
    text-align: center;
    margin-top: 2rem;
    font-style: italic;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .contact-intro {
      font-size: 1.1rem;
    }

    .contact-form {
      padding: 1.5rem;
    }
  }
</style>
