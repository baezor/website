---
import { Icon } from "astro-icon/components";
import { links } from "../data";
---

<section class="links-container" aria-label="Social Media Links">
  <h2 class="visually-hidden">Connect with Angel Baez</h2>
  <nav aria-label="Social media profiles">
    <ul class="links-list">
      {
        links.map((link) => (
          <li>
            <a
              href={link.url}
              class="link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Visit Angel Baez on ${link.label.replace("Follow me on ", "").replace("Check out my ", "").replace("Add me to your network on ", "")}`}
            >
              <span class="icon-circle">
                <Icon name={link.icon} class="link-icon" />
              </span>
              <span class="link-text">{link.label}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</section>

<style>
  .links-container {
    margin-top: 32px;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .small {
    font-size: 12px;
    text-align: center;
    margin-top: 16px;
    font-weight: 600;
    a {
      color: var(--color-text);
      text-decoration: underline;
    }
  }

  .link {
    position: relative;
    display: flex;
    margin-bottom: 16px;
    align-items: center;
    padding: 0.875rem 1.5rem 0.875rem 3.5rem;
    width: 100%;
    background-color: var(--color-text);
    color: var(--color-bg);
    font-family: var(--font-heading);
    font-size: 16px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 9999px;
    appearance: none;
    transition:
      transform 0.15s cubic-bezier(0, 0.2, 0.5, 3),
      background-color 0.2s ease;

    .icon-circle {
      position: absolute;
      left: 0.375rem;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 2.25rem;
      height: 2.25rem;
      background-color: var(--color-bg);
      border-radius: 50%;
    }

    .link-icon {
      width: 1.125rem;
      height: 1.125rem;
      color: var(--color-text);
    }

    .link-text {
      flex: 1;
      text-align: center;
      padding-right: 2rem;
    }

    &:hover {
      transform: scale(1.02);
      background-color: var(--color-accent);
    }
    &:active {
      transform: scale(1.02);
      background-color: var(--color-accent-active);
    }
    &:focus-visible {
      outline: 3px solid var(--color-accent);
      outline-offset: 2px;
    }
  }
</style>
