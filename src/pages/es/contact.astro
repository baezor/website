---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { SITE_TITLE } from "@/const";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={`${t('contact.title')} | ${SITE_TITLE[lang]}`}
  description={t('contact.intro')}
>
  <main>
    <div class="contact-container">
      <h1>{t('contact.title')}</h1>
      <p class="contact-intro">
        {t('contact.intro')}
      </p>

      <div class="contact-methods">
        <div class="contact-method">
          <Icon name="simple-icons:gmail" class="contact-icon" />
          <h2>{t('contact.email')}</h2>
          <p>{t('contact.emailDesc')}</p>
          <a href="mailto:angel@romerobaez.com" class="contact-link"
            >angel@romerobaez.com</a
          >
        </div>

        <div class="contact-method">
          <Icon name="simple-icons:linkedin" class="contact-icon" />
          <h2>{t('contact.linkedin')}</h2>
          <p>{t('contact.linkedinDesc')}</p>
          <a
            href="https://www.linkedin.com/in/angelromerobaez"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            linkedin.com/in/angelromerobaez
          </a>
        </div>

        <div class="contact-method">
          <Icon name="simple-icons:x" class="contact-icon" />
          <h2>{t('contact.x')}</h2>
          <p>{t('contact.xDesc')}</p>
          <a
            href="https://x.com/baezor/"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            @baezor
          </a>
        </div>
      </div>

      <div class="contact-note">
        <p>{t('contact.lookingForward')}</p>
      </div>
    </div>
  </main>
</Layout>

<style>
  .contact-container {
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .contact-intro {
    font-size: 1.2rem;
    line-height: 1.6;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .contact-method {
    background-color: var(--color-bg-elevated);
    padding: 2rem;
    border-radius: 0.5rem;
    text-align: center;
    transition: transform 0.2s ease;
  }

  .contact-method:hover {
    transform: translateY(-5px);
  }

  .contact-icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto 1rem;
    color: var(--color-accent);
  }

  .contact-method h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .contact-method p {
    margin-bottom: 0.75rem;
    opacity: 0.8;
  }

  .contact-link {
    font-family: var(--font-heading);
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
    display: inline-block;
  }

  .contact-link:hover {
    text-decoration: underline;
  }

  .contact-note {
    text-align: center;
    margin-top: 2rem;
    font-style: italic;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .contact-intro {
      font-size: 1.1rem;
    }

    .contact-methods {
      grid-template-columns: 1fr;
    }
  }
</style>
