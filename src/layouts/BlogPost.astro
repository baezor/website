---
import type { CollectionEntry } from "astro:content";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_URL } from "@/const";
import Layout from "./Layout.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { locales } from "@/i18n/ui";
import { getRelativeLocaleUrl } from "astro:i18n";
import { calculateReadingTime } from "@/utils/readingTime";
import BreadcrumbSchema from "@/components/BreadcrumbSchema.astro";
import FAQSchema from "@/components/FAQSchema.astro";

type Props = {
  entry: CollectionEntry<"blog">;
};

const { entry } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, categories, tags, metaDescription, keywords, contentType, lang, faqs } = entry.data;

const currentLang = lang || 'en';
const t = useTranslations(currentLang);

// Format date for display with correct locale
const locale = locales[currentLang];
const formattedPublishDate = pubDate.toLocaleDateString(locale, {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString(locale, {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Calculate reading time and word count
const readingTime = calculateReadingTime(entry.body);
const wordCount = entry.body ? entry.body.split(/\s+/).filter(word => word.length > 0).length : 0;

// Build breadcrumb items for structured data
const breadcrumbItems = [
  { name: t('nav.home'), url: getRelativeLocaleUrl(currentLang, '/') },
  { name: t('nav.blog'), url: getRelativeLocaleUrl(currentLang, 'blog') },
  { name: title, url: getRelativeLocaleUrl(currentLang, `blog/${entry.slug}`) }
];

// Build canonical URL for this post
const postUrl = new URL(getRelativeLocaleUrl(currentLang, `blog/${entry.slug}`), SITE_URL).toString();

// Build image URL if hero image exists
const imageUrl = heroImage ? new URL(heroImage, SITE_URL).toString() : null;

// Build enhanced BlogPosting schema
const blogPostingSchema: Record<string, unknown> = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": metaDescription || description,
  "datePublished": pubDate.toISOString(),
  "dateModified": (updatedDate || pubDate).toISOString(),
  "author": {
    "@type": "Person",
    "name": "Angel Baez",
    "url": SITE_URL,
    "sameAs": [
      "https://github.com/baezor",
      "https://x.com/baezor",
      "https://www.linkedin.com/in/angelromerobaez",
      "https://www.instagram.com/baez0r"
    ]
  },
  "publisher": {
    "@type": "Organization",
    "name": "Angel Baez",
    "url": SITE_URL,
    "logo": {
      "@type": "ImageObject",
      "url": new URL("/favicon.png", SITE_URL).toString()
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": postUrl
  },
  "wordCount": wordCount,
  "inLanguage": currentLang === 'es' ? 'es-MX' : 'en-US'
};

// Add image if available
if (imageUrl) {
  blogPostingSchema.image = {
    "@type": "ImageObject",
    "url": imageUrl
  };
}

// Add keywords if available
if (keywords && keywords.length > 0) {
  blogPostingSchema.keywords = keywords.join(", ");
}

// Add article section (categories) if available
if (categories && categories.length > 0) {
  blogPostingSchema.articleSection = categories[0]; // Primary category
}

// Add speakable property for voice/AI optimization
// Speakable identifies content suitable for text-to-speech
blogPostingSchema.speakable = {
  "@type": "SpeakableSpecification",
  "cssSelector": [".post-title", ".prose p:first-of-type", ".prose h2", ".prose h3"]
};
---

<Layout title={title} description={metaDescription || description} keywords={keywords}>
  <main>
    <article class="blog-post">
      <header class="blog-header">
        {
          heroImage && (
            <div class="hero-image-container">
              <img
                src={heroImage}
                alt={title}
                class="hero-image"
                loading="eager"
                decoding="async"
                fetchpriority="high"
                width="1200"
                height="630"
              />
            </div>
          )
        }
        <div class="container">
          <h1 class="post-title">{title}</h1>
          <div class="post-meta">
            <div class="post-meta-info">
              <time datetime={pubDate.toISOString()}>{formattedPublishDate}</time>
              <span class="meta-separator">Â·</span>
              <span class="reading-time" aria-label={t('blog.readingTime.aria', { time: readingTime.toString() })}>
                <span aria-hidden="true">ðŸ“–</span> {readingTime} {t('blog.readingTime')}
              </span>
            </div>
            {
              updatedDate && (
                <div class="updated-date">
                  {t('blog.updated')}{" "}
                  <time datetime={updatedDate.toISOString()}>
                    {formattedUpdatedDate}
                  </time>
                </div>
              )
            }
            <div class="post-taxonomy">
              {categories && categories.length > 0 && (
                <div class="post-categories">
                  {categories.map((category) => (
                    <a href={getRelativeLocaleUrl(currentLang, `category/${category}`)} class="category-badge">{category}</a>
                  ))}
                </div>
              )}
              {tags && tags.length > 0 && (
                <div class="post-tags">
                  {tags.map((tag) => (
                    <a href={getRelativeLocaleUrl(currentLang, `tag/${tag}`)} class="tag-badge">#{tag}</a>
                  ))}
                </div>
              )}
            </div>
          </div>
        </div>
      </header>

      <div class="container">
        <div class="prose">
          <slot />
        </div>

        {faqs && faqs.length > 0 && (
          <section class="faq-section" aria-labelledby="faq-heading">
            <h2 id="faq-heading">{currentLang === 'es' ? 'Preguntas Frecuentes' : 'Frequently Asked Questions'}</h2>
            <div class="faq-list">
              {faqs.map((faq) => (
                <details class="faq-item">
                  <summary class="faq-question">{faq.question}</summary>
                  <div class="faq-answer">
                    <p>{faq.answer}</p>
                  </div>
                </details>
              ))}
            </div>
          </section>
        )}
      </div>

      <footer class="post-footer container">
        <div class="post-nav">
          <a href={getRelativeLocaleUrl(currentLang, 'blog')} class="back-link">{t('blog.backToAll')}</a>
        </div>
      </footer>
    </article>
  </main>

  <!-- Enhanced BlogPosting Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(blogPostingSchema)} />

  <!-- Breadcrumb Structured Data -->
  <BreadcrumbSchema items={breadcrumbItems} />

  {faqs && faqs.length > 0 && (
    <FAQSchema faqs={faqs} />
  )}
</Layout>

<style is:global>
  /* Prose variables - inherit from core palette via CSS variable swap */
  :root {
    --prose-headings: var(--color-text);
    --prose-body: var(--color-text);
    --prose-links: var(--color-accent);
    --prose-links-hover: var(--color-accent-hover);
    --prose-borders: color-mix(in srgb, var(--color-text) 10%, transparent);
    --prose-captions: var(--color-text-muted);
    --prose-code-bg: color-mix(in srgb, var(--color-text) 5%, transparent);
    --prose-code-text: var(--color-text);
    --prose-pre-bg: #1a1a19;
    --prose-pre-text: #F0EFEA;
    --prose-blockquote: var(--color-text-muted);
  }

  /* Container */
  .container {
    width: 100%;
    max-width: 65ch;
    margin-left: auto;
    margin-right: auto;
  }

  /* Blog post layout */
  .blog-post {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  /* Header and hero image */
  .blog-header {
    margin-bottom: 3rem;
  }

  .hero-image-container {
    width: 100%;
    margin-bottom: 2.5rem;
    display: flex;
    justify-content: center;
  }

  .hero-image {
    max-width: 1200px;
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: 0.375rem;
    box-shadow: 0 10px 25px -5px color-mix(in srgb, var(--color-text) 5%, transparent);
  }

  .post-title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: -0.025em;
    margin-bottom: 1rem;
    color: var(--prose-headings);
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--prose-captions);
    margin-bottom: 1.5rem;
  }

  .post-meta-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .meta-separator {
    color: var(--prose-captions);
    opacity: 0.5;
  }

  .reading-time {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--prose-captions);
    font-weight: 500;
  }

  .updated-date {
    font-style: italic;
  }

  .post-taxonomy {
    margin-top: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-categories,
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .category-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background-color: color-mix(in srgb, var(--color-accent) 15%, transparent);
    color: var(--color-accent);
    border-radius: 1rem;
    font-weight: 500;
    text-transform: lowercase;
    font-style: normal;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .category-badge:hover {
    background-color: color-mix(in srgb, var(--color-accent) 25%, transparent);
  }

  .tag-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background-color: color-mix(in srgb, var(--color-text) 10%, transparent);
    color: var(--color-text);
    border-radius: 0.25rem;
    font-weight: 500;
    text-transform: lowercase;
    font-style: normal;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .tag-badge:hover {
    background-color: color-mix(in srgb, var(--color-text) 20%, transparent);
  }

  /* Post footer */
  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--prose-borders);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    font-family: var(--font-heading);
    color: var(--prose-links);
    font-weight: 600;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--prose-links-hover);
    text-decoration: underline;
  }

  /* Typography styles inspired by Tailwind Typography */
  .prose {
    color: var(--prose-body);
    max-width: 65ch;
    font-size: 1.125rem;
    line-height: 1.75;
  }

  .prose p,
  .prose ul,
  .prose ol,
  .prose blockquote {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }

  .prose h1 {
    font-family: var(--font-heading);
    font-size: 2.25rem;
    margin-top: 0;
    margin-bottom: 0.8888889em;
    line-height: 1.1111111;
    font-weight: 700;
    letter-spacing: -0.025em;
    color: var(--prose-headings);
  }

  .prose h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3333333;
    font-weight: 700;
    letter-spacing: -0.025em;
    color: var(--prose-headings);
    border-bottom: 1px solid var(--prose-borders);
    padding-bottom: 0.5rem;
  }

  .prose h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    line-height: 1.6;
    font-weight: 700;
    color: var(--prose-headings);
  }

  .prose h4 {
    font-family: var(--font-heading);
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    line-height: 1.5;
    font-weight: 700;
    color: var(--prose-headings);
  }

  /* Lists */
  .prose ul {
    list-style-type: disc;
    padding-left: 1.625em;
  }

  .prose ol {
    list-style-type: decimal;
    padding-left: 1.625em;
  }

  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    padding-left: 0.375em;
  }

  .prose li::marker {
    color: var(--prose-captions);
  }

  /* Links */
  .prose a {
    color: var(--prose-links);
    text-decoration: underline;
    font-weight: 500;
    text-underline-offset: 2px;
    transition: color 0.15s ease;
  }

  .prose a:hover {
    color: var(--prose-links-hover);
  }

  /* Blockquotes */
  .prose blockquote {
    font-style: italic;
    color: var(--prose-blockquote);
    border-left: 4px solid var(--prose-links);
    padding-left: 1rem;
    margin-left: 0;
    margin-right: 0;
  }

  .prose blockquote p {
    margin-top: 0;
    margin-bottom: 0;
  }

  /* Code blocks */
  .prose code {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      "Liberation Mono", "Courier New", monospace;
    font-size: 0.875em;
    font-weight: 600;
    color: var(--prose-code-text);
    background-color: var(--prose-code-bg);
    padding: 0.2em 0.4em;
    border-radius: 0.25em;
  }

  .prose pre {
    color: var(--prose-pre-text);
    background-color: var(--prose-pre-bg);
    overflow-x: auto;
    font-weight: 400;
    font-size: 0.875em;
    line-height: 1.7142857;
    margin-top: 1.7142857em;
    margin-bottom: 1.7142857em;
    border-radius: 0.375rem;
    padding: 1.25rem;
  }

  .prose pre code {
    background-color: transparent;
    border-width: 0;
    border-radius: 0;
    padding: 0;
    font-weight: inherit;
    color: inherit;
    font-size: inherit;
    font-family: inherit;
    line-height: inherit;
  }

  /* Tables */
  .prose table {
    width: 100%;
    table-layout: auto;
    text-align: left;
    margin-top: 2em;
    margin-bottom: 2em;
    font-size: 0.875em;
    line-height: 1.7142857;
    border-collapse: collapse;
  }

  .prose thead {
    border-bottom: 1px solid var(--prose-borders);
  }

  .prose thead th {
    padding-right: 0.5714286em;
    padding-bottom: 0.5714286em;
    padding-left: 0.5714286em;
    font-weight: 600;
    vertical-align: bottom;
    color: var(--prose-headings);
  }

  .prose tbody tr {
    border-bottom: 1px solid var(--prose-borders);
  }

  .prose tbody tr:last-child {
    border-bottom-width: 0;
  }

  .prose tbody td {
    padding-top: 0.5714286em;
    padding-right: 0.5714286em;
    padding-bottom: 0.5714286em;
    padding-left: 0.5714286em;
    vertical-align: top;
  }

  /* Images */
  .prose img {
    margin-top: 2em;
    margin-bottom: 2em;
    border-radius: 0.375rem;
  }

  .prose figure {
    margin-top: 2em;
    margin-bottom: 2em;
  }

  .prose figure > * {
    margin-top: 0;
    margin-bottom: 0;
  }

  .prose figcaption {
    color: var(--prose-captions);
    font-size: 0.875em;
    line-height: 1.4285714;
    margin-top: 0.8571429em;
    text-align: center;
  }

  /* Horizontal rule */
  .prose hr {
    margin-top: 3em;
    margin-bottom: 3em;
    border: 0;
    border-top: 1px solid var(--prose-borders);
  }

  /* FAQ Section */
  .faq-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--prose-borders);
  }

  .faq-section h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--prose-headings);
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .faq-item {
    background-color: var(--prose-code-bg);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .faq-question {
    padding: 1rem 1.25rem;
    font-weight: 600;
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--prose-headings);
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::after {
    content: '+';
    font-size: 1.25rem;
    font-weight: 400;
    color: var(--color-accent);
    transition: transform 0.2s ease;
  }

  .faq-item[open] .faq-question::after {
    content: '-';
  }

  .faq-answer {
    padding: 0 1.25rem 1rem;
    color: var(--prose-body);
  }

  .faq-answer p {
    margin: 0;
    line-height: 1.6;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .prose {
      font-size: 1rem;
    }

    .prose h1 {
      font-size: 1.875rem;
    }

    .prose h2 {
      font-size: 1.375rem;
    }

    .prose h3 {
      font-size: 1.125rem;
    }
  }
</style>
