---
import Layout from "@/layouts/Layout.astro";
import ProfilePicture from "@/components/ProfilePicture.astro";
import Links from "@/components/Links.astro";
import { userData } from "../../data";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../const";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const userName = userData[0].userName;
const userDesc = userData[0].userDesc;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={SITE_TITLE[lang]} description={SITE_DESCRIPTION[lang]}>
  <main id="main-content">
    <article class="profile-container">
      <header>
        <ProfilePicture />
      </header>
      <section aria-labelledby="about-heading">
        <h2 id="about-heading" class="visually-hidden">{t('home.aria.about', { name: userName })}</h2>
        <p class="bio">
          {t('home.bio')}
        </p>
      </section>
      <Links />
    </article>
  </main>
</Layout>

<style>
  .profile-container {
    max-width: 584px;
    margin: 0 auto;
    width: 100%;
    padding: 0 16px;
    text-align: center;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .bio {
    text-align: center;
    margin: 1.5rem 0;
    line-height: 1.6;
    font-size: 1.1rem;
    color: var(--color-text);
  }

  .bio a {
    color: var(--color-accent);
    font-weight: 600;
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .bio a:hover {
    color: var(--color-accent-hover);
  }

  /* Improve mobile experience */
  @media (max-width: 640px) {
    .profile-container {
      padding: 0 12px;
    }

    .bio {
      font-size: 1rem;
      margin: 1rem 0;
      text-align: center;
    }
  }
</style>
