---
import { SITE_URL } from "../const";

interface Props {
  title: string;
  description: string;
  image?: string;
  keywords?: string;
}

const { 
  title, 
  description, 
  image = "../img/Logo1.png",
  keywords = "Angel Romero Baez, Angel Baez, Developer, Entrepreneur, Cancun, Mexico, baezor, Web Developer" 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, SITE_URL);
---

<!-- Essential Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/../../img/astro.png" />
<meta name="generator" content={Astro.generator} />

<!-- SEO Meta Tags -->
<link rel="canonical" href={canonicalURL} />
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content="Angel Romero Baez" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, SITE_URL)} />
<meta property="og:site_name" content="Angel Romero Baez" />
<meta property="og:locale" content="en_US" />

<!-- X (formerly Twitter) -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, SITE_URL)} />
<meta name="twitter:site" content="@baezor" />
<meta name="twitter:creator" content="@baezor" />

<!-- Structured Data for Person -->
<script is:inline define:vars={{ siteUrl: SITE_URL, imageUrl: new URL(image, SITE_URL).toString() }} type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Angel Romero Baez",
    "url": siteUrl,
    "image": imageUrl,
    "email": "angel@romerobaez.com",
    "jobTitle": "Developer and Entrepreneur",
    "description": "Developer and entrepreneur based in Cancun, Mexico",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Cancun",
      "addressRegion": "Quintana Roo",
      "addressCountry": "Mexico"
    },
    "sameAs": [
      "https://www.linkedin.com/in/baezor/",
      "https://github.com/baezor/",
      "https://www.instagram.com/baez0r/",
      "https://x.com/baezor/",
      "https://www.threads.net/@baez0r",
      "https://www.tiktok.com/@angelbaezor"
    ],
    "knowsLanguage": ["en", "es"]
  }
</script>
