---
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../const";
import { useTranslations } from "@/i18n/utils";

const lang = 'en'; // Default to English for 404
const t = useTranslations(lang);
---

<Layout title={`${t('notFound.title')} | ${SITE_TITLE[lang]}`} description={t('notFound.message')}>
  <main class="not-found-container">
    <div class="not-found-content">
      <h1>{t('notFound.title')}</h1>
      <p>{t('notFound.message')}</p>
      <a href="/" class="back-home">{t('notFound.back')}</a>
    </div>
  </main>
</Layout>

<style>
  .not-found-container {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
  }

  .not-found-content {
    text-align: center;
    max-width: 600px;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--color-text-muted);
  }

  .back-home {
    display: inline-block;
    font-family: var(--font-heading);
    background-color: var(--color-accent);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.2s ease;
  }

  .back-home:hover {
    background-color: var(--color-accent-hover);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    p {
      font-size: 1rem;
    }
  }
</style>
