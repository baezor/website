---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { SITE_TITLE } from "@/const";
---

<Layout
  title={`Contact | ${SITE_TITLE}`}
  description="Get in touch with Angel Baez via email or social media."
>
  <main>
    <div class="contact-container">
      <h1>Contact Me</h1>
      <p class="contact-intro">
        Feel free to reach out with questions, project inquiries, or just to say
        hello. I'm always open to new opportunities and connections.
      </p>

      <div class="contact-methods">
        <div class="contact-method">
          <Icon name="simple-icons:gmail" class="contact-icon" />
          <h2>Email</h2>
          <p>For direct inquiries:</p>
          <a href="mailto:angel@romerobaez.com" class="contact-link"
            >angel@romerobaez.com</a
          >
        </div>

        <div class="contact-method">
          <Icon name="simple-icons:linkedin" class="contact-icon" />
          <h2>LinkedIn</h2>
          <p>Connect professionally:</p>
          <a
            href="https://www.linkedin.com/in/angelromerobaez"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            linkedin.com/in/angelromerobaez
          </a>
        </div>

        <div class="contact-method">
          <Icon name="simple-icons:x" class="contact-icon" />
          <h2>X</h2>
          <p>Follow for updates:</p>
          <a
            href="https://x.com/baezor/"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            @baezor
          </a>
        </div>
      </div>

      <div class="contact-note">
        <p>Looking forward to hearing from you!</p>
      </div>
    </div>
  </main>
</Layout>

<style>
  .contact-container {
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
    padding: 0 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .contact-intro {
    font-size: 1.2rem;
    line-height: 1.6;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .contact-method {
    background-color: var(--secundary-color);
    padding: 2rem;
    border-radius: 0.5rem;
    text-align: center;
    transition: transform 0.2s ease;
  }

  :global(.dark) .contact-method {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .contact-method:hover {
    transform: translateY(-5px);
  }

  .contact-icon {
    width: 3rem;
    height: 3rem;
    margin: 0 auto 1rem;
    color: var(--button-flat);
  }

  .contact-method h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .contact-method p {
    margin-bottom: 0.75rem;
    opacity: 0.8;
  }

  .contact-link {
    color: var(--button-flat);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    display: inline-block;
  }

  :global(.dark) .contact-link {
    color: white;
  }

  .contact-link:hover {
    text-decoration: underline;
  }

  .contact-note {
    text-align: center;
    margin-top: 2rem;
    font-style: italic;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .contact-intro {
      font-size: 1.1rem;
    }

    .contact-methods {
      grid-template-columns: 1fr;
    }
  }
</style>
