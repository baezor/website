---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import { SITE_TITLE } from "@/const";

// Generate static paths for all categories
export async function getStaticPaths() {
  const posts = await getCollection("blog");

  // Collect all unique categories
  const categories = new Set<string>();
  posts.forEach((post) => {
    if (post.data.categories) {
      post.data.categories.forEach((category) => categories.add(category));
    }
  });

  // Generate a path for each category
  return Array.from(categories).map((category) => {
    const categoryPosts = posts
      .filter((post) => post.data.categories?.includes(category))
      .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    return {
      params: { category },
      props: { posts: categoryPosts, category },
    };
  });
}

const { posts, category } = Astro.props;

// Format category for display (capitalize first letter of each word)
const formatCategory = (cat: string) => {
  return cat
    .split("-")
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(" ");
};

const displayCategory = formatCategory(category);
const pageTitle = `${displayCategory} Posts | ${SITE_TITLE}`;
const description = `All blog posts in the ${displayCategory} category`;
---

<Layout title={pageTitle} description={description}>
  <main class="category-archive">
    <div class="archive-header">
      <nav class="breadcrumb">
        <a href="/blog/">Blog</a>
        <span class="separator">/</span>
        <span class="current">Category: {displayCategory}</span>
      </nav>
      <h1>Category: {displayCategory}</h1>
      <p class="post-count">{posts.length} {posts.length === 1 ? "post" : "posts"}</p>
    </div>

    <section class="blog-posts">
      {
        posts.map((post) => (
          <article class="post-card">
            {post.data.heroImage && (
              <div class="post-image">
                <a href={`/blog/${post.slug}/`}>
                  <img src={post.data.heroImage} alt={post.data.title} />
                </a>
              </div>
            )}
            <div class="post-content">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString("en-us", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </time>
              <h2 class="post-title">
                <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
              </h2>
              {post.data.categories && post.data.categories.length > 0 && (
                <div class="post-categories">
                  {post.data.categories.map((cat) => (
                    <a href={`/category/${cat}/`} class="category-badge">
                      {cat}
                    </a>
                  ))}
                </div>
              )}
              <p class="post-description">{post.data.description}</p>
              <a href={`/blog/${post.slug}/`} class="read-more">
                Read more â†’
              </a>
            </div>
          </article>
        ))
      }
    </section>
  </main>
</Layout>

<style>
  .category-archive {
    max-width: 1000px;
    margin: 0 auto;
    padding: 6rem 1rem 4rem 1rem;
  }

  .archive-header {
    margin-bottom: 3rem;
  }

  .breadcrumb {
    font-size: 0.875rem;
    margin-bottom: 1rem;
    color: var(--color-text-muted);
  }

  .breadcrumb a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb .separator {
    margin: 0 0.5rem;
  }

  .breadcrumb .current {
    color: var(--color-text);
  }

  h1 {
    margin-bottom: 0.5rem;
    font-size: 2.5rem;
  }

  .post-count {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .blog-posts {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-4px);
  }

  .post-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem 0;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  time {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .post-title {
    margin: 0.5rem 0;
    font-size: 1.5rem;
  }

  .post-title a {
    color: inherit;
    text-decoration: none;
  }

  .post-title a:hover {
    text-decoration: underline;
  }

  .post-description {
    margin: 0.5rem 0 1.5rem;
    flex-grow: 1;
  }

  .read-more {
    display: inline-block;
    font-family: var(--font-heading);
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    align-self: flex-start;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .post-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0.75rem 0;
  }

  .category-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background-color: color-mix(in srgb, var(--color-accent) 15%, transparent);
    color: var(--color-accent);
    border-radius: 1rem;
    font-weight: 500;
    text-transform: lowercase;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .category-badge:hover {
    background-color: color-mix(in srgb, var(--color-accent) 25%, transparent);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .blog-posts {
      grid-template-columns: 1fr;
    }
  }
</style>
