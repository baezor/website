---
import { getLangFromUrl, getLocalizedUrl, useTranslations } from '@/i18n/utils';
import { languages } from '@/i18n/ui';

const currentLang = getLangFromUrl(Astro.url);
const alternateLang = currentLang === 'en' ? 'es' : 'en';
const alternateUrl = getLocalizedUrl(Astro.url.pathname, alternateLang);
const t = useTranslations(currentLang);
---

<div class="language-switcher">
  <a
    href={alternateUrl}
    aria-label={alternateLang === 'es' ? t('lang.switch.toSpanish') : t('lang.switch.toEnglish')}
    class="lang-link"
  >
    <span class="lang-code">{alternateLang.toUpperCase()}</span>
  </a>
</div>

<style>
  .language-switcher {
    display: flex;
    align-items: center;
  }

  .lang-link {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
    border: 1px solid var(--color-text);
  }

  .lang-link:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .lang-code {
    font-weight: 700;
  }
</style>
